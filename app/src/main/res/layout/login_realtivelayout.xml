<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingLeft="10dp"
    android:paddingTop="16dp"
    android:paddingRight="10dp">

        <TextView
            android:id="@+id/Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt; Back"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/Back"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/hr_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/hrlogo" />

        <TextView
            android:id="@+id/Proceeed_with_your"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hr_logo"
            android:text="Proceed with your"
            android:textColor="@android:color/black"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Proceeed_with_your"
            android:layout_marginBottom="50dp"
            android:text="Login"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:layout_marginTop="50dp"
            android:text="Username"
            android:textColor="@android:color/black"
            android:textSize="16dp" />


        <EditText
            android:id="@+id/DURAR0045"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:text="DURAR0045"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/person_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/username"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:src="@drawable/baseline_person_outline_black_18dp" />

        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DURAR0045"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edit02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:text="********************"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/key"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/password"
            android:layout_alignParentRight="true"
            android:src="@drawable/baseline_vpn_key_black_18dp" />

        <RelativeLayout
            android:id="@+id/login_red"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/edit02"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_red">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Login"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/forgot_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/login_red">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Forgot Password?"
                android:textSize="20dp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>

